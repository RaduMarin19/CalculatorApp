<Window x:Class="CalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorApp"
        mc:Ignorable="d"
        Title="Calculator" Height="530" Width="400">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="Button">
            <EventSetter Event="PreviewKeyDown" Handler="ButtonEnter"/>
        </Style>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="C" Modifiers="Control" Command="{Binding ClipboardCommand}" CommandParameter="Copy"/>
        <KeyBinding Key="V" Modifiers="Control" Command="{Binding ClipboardCommand}" CommandParameter="Paste"/>
        <KeyBinding Key="X" Modifiers="Control" Command="{Binding ClipboardCommand}" CommandParameter="Cut"/>
        
        <KeyBinding Key="D0" Command="{Binding NumberCommand}" CommandParameter="0"/>
        <KeyBinding Key="D1" Command="{Binding NumberCommand}" CommandParameter="1"/>
        <KeyBinding Key="D2" Command="{Binding NumberCommand}" CommandParameter="2"/>
        <KeyBinding Key="D3" Command="{Binding NumberCommand}" CommandParameter="3"/>
        <KeyBinding Key="D4" Command="{Binding NumberCommand}" CommandParameter="4"/>
        <KeyBinding Key="D5" Command="{Binding NumberCommand}" CommandParameter="5"/>
        <KeyBinding Key="D6" Command="{Binding NumberCommand}" CommandParameter="6"/>
        <KeyBinding Key="D7" Command="{Binding NumberCommand}" CommandParameter="7"/>
        <KeyBinding Key="D8" Command="{Binding NumberCommand}" CommandParameter="8"/>
        <KeyBinding Key="D9" Command="{Binding NumberCommand}" CommandParameter="9"/>

        <KeyBinding Key="NumPad0" Command="{Binding NumberCommand}" CommandParameter="0"/>
        <KeyBinding Key="NumPad1" Command="{Binding NumberCommand}" CommandParameter="1"/>
        <KeyBinding Key="NumPad2" Command="{Binding NumberCommand}" CommandParameter="2"/>
        <KeyBinding Key="NumPad3" Command="{Binding NumberCommand}" CommandParameter="3"/>
        <KeyBinding Key="NumPad4" Command="{Binding NumberCommand}" CommandParameter="4"/>
        <KeyBinding Key="NumPad5" Command="{Binding NumberCommand}" CommandParameter="5"/>
        <KeyBinding Key="NumPad6" Command="{Binding NumberCommand}" CommandParameter="6"/>
        <KeyBinding Key="NumPad7" Command="{Binding NumberCommand}" CommandParameter="7"/>
        <KeyBinding Key="NumPad8" Command="{Binding NumberCommand}" CommandParameter="8"/>
        <KeyBinding Key="NumPad9" Command="{Binding NumberCommand}" CommandParameter="9"/>

        <KeyBinding Key="Add" Command="{Binding OperatorCommand}" CommandParameter="+"/>
        <KeyBinding Key="Subtract" Command="{Binding OperatorCommand}" CommandParameter="-"/>
        <KeyBinding Key="Multiply" Command="{Binding OperatorCommand}" CommandParameter="*"/>
        <KeyBinding Key="Divide" Command="{Binding OperatorCommand}" CommandParameter="/"/>
        <KeyBinding Key="OemPlus" Command="{Binding OperatorCommand}" CommandParameter="+"/>
        <KeyBinding Key="OemMinus" Command="{Binding OperatorCommand}" CommandParameter="-"/>
        <KeyBinding Key="Oem2" Command="{Binding OperatorCommand}" CommandParameter="/"/>
        <KeyBinding Key="Oem5" Command="{Binding OperatorCommand}" CommandParameter="%"/>
        <KeyBinding Key="Decimal" Command="{Binding NumberCommand}" CommandParameter="."/>
        <KeyBinding Key="OemPeriod" Command="{Binding NumberCommand}" CommandParameter="."/>

        <KeyBinding Key="Enter" Command="{Binding CalculateCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Expander Name="Settings" 
          HorizontalAlignment="Left"
          ExpandDirection="Right" IsExpanded="False" Width="100">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel>
                    <Button Grid.Row ="0" Name="Standard" Content ="Standard" Command="{Binding ChangeMode}" CommandParameter="Standard"/>
                    <Button Grid.Row ="1" Name="Programmer" Content ="Programmer" Command="{Binding ChangeMode}" CommandParameter="Programmer"/>
                </StackPanel>
            </Grid>
        </Expander>
        <TextBlock Grid.Row="0" Name="CalculatorMode" Text ="{Binding Mode}" FontSize= "10" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>

        <TextBlock Grid.Row="1" Name="SecondDisplayText" Text="{Binding SecondDisplayText}"  FontSize="17" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
        <TextBlock Grid.Row="2" Name="DisplayText" Text="{Binding DisplayText}"  FontSize="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Content="MC" Command="{Binding MemoryCommand}" CommandParameter="MC"/>
                <Button Grid.Row="0" Grid.Column="1" Content="MR" Command="{Binding MemoryCommand}" CommandParameter="MR"/>
                <Button Grid.Row="0" Grid.Column="2" Content="M+" Command="{Binding MemoryCommand}" CommandParameter="M+"/>
                <Button Grid.Row="0" Grid.Column="3" Content="M-" Command="{Binding MemoryCommand}" CommandParameter="M-"/>
                <Button Grid.Row="0" Grid.Column="4" Content="MS" Command="{Binding MemoryCommand}" CommandParameter="MS"/>
                <Expander Grid.Row="0" Grid.Column="5" Name="M" 
                          Header="Memory" HorizontalAlignment="Center"
                          ExpandDirection="Down" IsExpanded="False" Width="Auto">
                    <ListBox ItemsSource="{Binding MemoryValues}" SelectedItem="{Binding SelectedMemoryValue, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="{Binding}"  VerticalAlignment="Center" Width="Auto" Command="{Binding DataContext.RecallMemoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander>


            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            
                <Button Grid.Row="0" Grid.Column="0" Content="%" Command="{Binding OperatorCommand}" CommandParameter="%"/>
                <Button Grid.Row="0" Grid.Column="1" Content="CE" Command="{Binding ClearCommand}" CommandParameter="CE"/>
                <Button Grid.Row="0" Grid.Column="2" Content="C" Command="{Binding ClearCommand}" CommandParameter="C"/>
                <Button Grid.Row="0" Grid.Column="3" Content="⌫" Command="{Binding ClearCommand}" CommandParameter="BS"/>

               <Button Grid.Row="1" Grid.Column="0" Content="1/x" Command="{Binding OperatorCommand}" CommandParameter="⅟"/>
               <Button Grid.Row="1" Grid.Column="1" Content="x²" Command="{Binding OperatorCommand}" CommandParameter="^"/>
               <Button Grid.Row="1" Grid.Column="2" Content="√x" Command="{Binding OperatorCommand}" CommandParameter="√"/>
               <Button Grid.Row="1" Grid.Column="3" Content="/" Command="{Binding OperatorCommand}" CommandParameter="/"/>

               <Button Grid.Row="2" Grid.Column="0" Content="7" Command="{Binding NumberCommand}" CommandParameter="7"/>
               <Button Grid.Row="2" Grid.Column="1" Content="8" Command="{Binding NumberCommand}" CommandParameter="8"/>
               <Button Grid.Row="2" Grid.Column="2" Content="9" Command="{Binding NumberCommand}" CommandParameter="9"/>
               <Button Grid.Row="2" Grid.Column="3" Content="*" Command="{Binding OperatorCommand}" CommandParameter="*"/>
               
               <Button Grid.Row="3" Grid.Column="0" Content="4" Command="{Binding NumberCommand}" CommandParameter="4"/>
               <Button Grid.Row="3" Grid.Column="1" Content="5" Command="{Binding NumberCommand}" CommandParameter="5"/>
               <Button Grid.Row="3" Grid.Column="2" Content="6" Command="{Binding NumberCommand}" CommandParameter="6"/>
               <Button Grid.Row="3" Grid.Column="3" Content="-" Command="{Binding OperatorCommand}" CommandParameter="-"/>

               <Button Grid.Row="4" Grid.Column="0" Content="1" Command="{Binding NumberCommand}" CommandParameter="1"/>
               <Button Grid.Row="4" Grid.Column="1" Content="2" Command="{Binding NumberCommand}" CommandParameter="2"/>
               <Button Grid.Row="4" Grid.Column="2" Content="3" Command="{Binding NumberCommand}" CommandParameter="3"/>
               <Button Grid.Row="4" Grid.Column="3" Content="+" Command="{Binding OperatorCommand}" CommandParameter="+"/>

               <Button Grid.Row="5" Grid.Column="0" Content="+/-" Command="{Binding OperatorCommand}" CommandParameter="~"/>
               <Button Grid.Row="5" Grid.Column="1" Content="0" Command="{Binding NumberCommand}" CommandParameter="0"/>
               <Button Grid.Row="5" Grid.Column="2" Content="." Command="{Binding NumberCommand}" CommandParameter="."/>
               <Button Grid.Row="5" Grid.Column="3" Content="=" Command="{Binding CalculateCommand}"/>
           </Grid>
        </Grid>
    </Grid>
</Window>
